<div class="panel panel-default outer-panel panel-info">
  <!-- Default panel contents -->
  <div class="panel-heading"><h3 class="panel-title">Organization Management</h3></div>
  <div class="panel-body">
    <p>The following organizations are registered in the system.</p>
  </div>

  <div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading"><h3 class="panel-title">Organizations</h3></div>
      <table class="table table-striped table-condensed">
        <caption><%= link_to '<i class="glyphicon glyphicon-plus"></i> New Organization'.html_safe, new_admin_organization_url, :class => "btn btn-primary btn-xs" %></caption>
        <thead>
        <tr>
          <th>&nbsp;</th>
          <th>Included</th>
          <th>Name</th>
          <th>Slug</th>
          <th>Campaigns</th>
          <th>Wish Lists</th>
          <th>Student Count</th>
          <th>Sponsored Wish Lists</th>
          <th>Sponsored Wish Lists Donations Made</th>
          <th>&nbsp;</th>
          <th>&nbsp;</th>
        </tr>
        </thead>
        <tbody>
        <%= render :partial => 'organization', :collection => @organizations %>
        <tr>
          <th>Totals</th><!--name - keep empty-->
          <th>&nbsp;</th><!--included - keep empty-->
          <th>&nbsp;</th><!--name - keep empty-->
          <th>&nbsp;</th><!--slug - keep empty-->
          <th><%= Campaign.count %></th><!--campaign count-->
          <th><%= Wishlist.count %></th><!--wish lists count-->
          <th><%= Wishlist.select(:external_id).distinct.count %></th><!--student count-->
          <th><%= Donation.count %></th><!--wish list donations count-->
          <th><%= number_to_currency(Donation.sum(:amount)) %></th><!--wish list donations money total-->
          <th>&nbsp;</th><!--edit button - keep empty-->
          <th>&nbsp;</th>
        </tr>
        </tbody>
      </table>
    </div>
</div>
