<div class="panel panel-default outer-panel">
  <!-- Default panel contents -->
  <div class="panel-heading"><h3 class="panel-title">Organization Management</h3></div>
  <div class="panel-body">
    <p>The following organizations are registered in the system.</p>
  </div>

  <div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading"><h3 class="panel-title">Organizations</h3></div>
      <table class="table table-striped table-condensed">
        <caption><%= link_to '<i class="glyphicon glyphicon-plus"></i> New Organization'.html_safe, new_admin_organization_url, :class => "btn btn-primary btn-xs" %></caption>
        <thead>
        <tr>
          <th>Name</th>
          <th>&nbsp;</th>
        </tr>
        </thead>
        <tbody>
        <%= render :partial => 'organization', :collection => @organizations %>
        </tbody>
      </table>
    </div>
</div>
