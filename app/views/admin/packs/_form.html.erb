<%= form_for [:admin, @catalog, @pack], html: {class: 'form-horizontal'}, remote: true do |f| %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="form-group">
    <%= f.label :ezid, class: "col-md-2 control-label" %>
    <div class="col-md-10">
      <%= f.text_field :ezid, class: "form-control", disabled: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :pack_type, class: "col-md-2 control-label" %>
    <div class="col-md-10">
      <%= f.text_field :pack_type, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, class: "col-md-2 control-label" %>
    <div class="col-md-10">
      <%= f.text_area :description, class: "form-control", :rows => 6 %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :price, class: "col-md-2 control-label" %>
    <div class="col-md-10">
      <%= f.number_field :price, class: "form-control", :min => 0, :step => 0.01 %>
    </div>
  </div>
<% end %>
