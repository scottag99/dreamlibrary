<%= breadcrumb([
  @campaign.organization.name,
    {href: admin_organization_url(@campaign.organization), label: 'Campaigns'}
  ])
%>
<%
catalog = ''
book_total = 0
%>
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Catalog</th>
      <th>ISBN</th>
      <th>Title</th>
      <th>QTY</th>
    </tr>
  </thead>
  <tbody>
<% @books.each do |key, count|
    book_total += count
-%>
    <tr>
      <td><%= catalog != key[0] ? catalog = key[0] : ' ' %></td>
      <td><%= key[1] %></td>
      <td><%= key[2] %></td>
      <td><%= count %></td>
    </tr>
<% end -%>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="3" class="text-right"><strong>Total:</strong></td>
      <td><%= book_total %></td>
    </tr>
  </tfoot>
</table>
