<%= form_for [:admin, @campaign.organization, @campaign], :html => {:class => "form-horizontal"} do |f| %>

  <div class="form-group">
    <%= f.label :name, class: "col-md-1 control-label" %> (required)
    <div class="col-md-4">
      <%= f.text_field :name, class: "form-control", :required => true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :deadline, class: "col-md-1 control-label" %> (required)
    <div class="col-md-4">
      <%= f.text_field :deadline, :class => 'form-control', :required => true %>
    </div>
  </div>

  <!-- <div class="form-group">
    <div class="col-md-offset-1 col-md-4">
      <div class="checkbox">
        <label>
          <%= f.check_box :ready_for_donations %>
          Ready for Donations
        </label>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-1 col-md-4">
      <div class="checkbox">
        <label>
          <%= f.check_box :can_edit_wishlists %>
          Can Edit Wish Lists
        </label>
      </div>
    </div>
  </div> -->

  <div class="form-group">
    <%= f.label :address, class: "col-md-1 control-label" %>
    <div class="col-md-4">
      <%= f.text_area :address, :class => 'form-control', :rows => 3 %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :book_limit, class: "col-md-1 control-label" %>
    <div class="col-md-4">
      <%= f.number_field :book_limit, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
  <div id="hidelabel">
    <%= f.label :catalogs, class: "col-md-1 control-label" %>
	</div>
    <div class="col-md-4">
    <%= f.collection_select :catalog_ids, Catalog.all, :id, :name, {}, {:style => "height: 110%; width: 45%;" ,:multiple => true} %>
    </div>
  </div>
  
  <div class="form-group">
  
	<%= f.label :catalogs, class: "col-md-1 control-label" %>
	<div class="col-md-4">
		<div class="subject-info-box-1">
		  <select multiple="multiple" id='lstBox1' class="form-control">
			<%= options_from_collection_for_select(Catalog.all,'id','name')%>
		  </select>
		</div>
		<div class="subject-info-arrows text-center">
		  <input type="button" id="btnAllRight" value=">>" class="btn btn-default" /><br />
		  <input type="button" id="btnRight" value=">" class="btn btn-default" /><br />
		  <input type="button" id="btnLeft" value="<" class="btn btn-default" /><br />
		  <input type="button" id="btnAllLeft" value="<<" class="btn btn-default" />
		</div>
		<div class="subject-info-box-2">
		  <select multiple="multiple" id='lstBox2' class="form-control">
		
		  </select>
		</div>
	</div>
  </div>
  
  
  
  <div class="form-group">
    <%= f.label :notes, class: "col-md-1 control-label" %>
    <div class="col-md-4">
      <%= f.text_area :notes, :class => 'form-control', :rows => 3 %>
    </div>
  </div>

  <div class="form-group">
      <div class="col-md-offset-1 col-md-4 ">
          <%= f.submit 'Submit'.html_safe, :class => 'btn btn-primary' %>
          <%= link_to 'Back', admin_organization_url(@campaign.organization), :class => "btn btn-default"%>
      </div>
  </div>
</div>
  <% content_for :foot do %>
  <script type="text/javascript">
  
  $( "#campaign_catalog_ids" ).hide();
  $('#hidelabel').hide();
  
  $(function () {
    $('#campaign_deadline').datetimepicker({defaultDate: "<%= @campaign.deadline %>", format: "YYYY-MM-DD"});
  });
  
    $(function () {
     var selected = $('#campaign_catalog_ids option:selected');
      $('#lstBox2').append($(selected).clone());
	 });
    $(function () {
		$('#campaign_catalog_ids option:selected').each(function(idx, opt){
			$('#lstBox1 option[value=' + opt.value + ']').remove();
		});
    });
   (function () {
    $('#btnRight').click(function (e) {
        var selectedOpts = $('#lstBox1 option:selected');
        var $select = $('#campaign_catalog_ids');
		var currSelected = $select.val() || [];
		currSelected.push(selectedOpts.val());
		$select.val(currSelected);
		
		if (selectedOpts.length == 0) {
            e.preventDefault();
        }
        $('#lstBox2').append($(selectedOpts).clone());
        $(selectedOpts).remove();
        e.preventDefault();
    });
    $('#btnAllRight').click(function (e) {
        var selectedOpts = $('#lstBox1 option');
       
	   $("#campaign_catalog_ids").find("option").each(function() {
       $(this).prop('selected', true);
      });
		if (selectedOpts.length == 0) {
            e.preventDefault();
        }
        $('#lstBox2').append($(selectedOpts).clone());
        $(selectedOpts).remove();
        e.preventDefault();
    });
    $('#btnLeft').click(function (e) {
        var selectedOpts = $('#lstBox2 option:selected');
		console.log(selectedOpts.val());
        $('#campaign_catalog_ids option[value=' + selectedOpts.val() + ']').prop('selected', false);
		
		if (selectedOpts.length == 0) {
            e.preventDefault();
        }
        $('#lstBox1').append($(selectedOpts).clone());
        $(selectedOpts).remove();
        e.preventDefault();
    });
    $('#btnAllLeft').click(function (e) {
        var selectedOpts = $('#lstBox2 option');
        $("#campaign_catalog_ids").find("option").each(function() {
        $(this).prop('selected', false);
       });
		if (selectedOpts.length == 0) {
            e.preventDefault();
        }
        $('#lstBox1').append($(selectedOpts).clone());
        $(selectedOpts).remove();
        e.preventDefault();
    });
}(jQuery));



  </script>
  <% end %>
<% end %>
