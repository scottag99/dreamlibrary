<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading"><h3 class="panel-title">Campaigns for <%= @organization.name %></h3></div>
  <div class="panel-body">
    <p>The following campaigns are associated with <%= @organization.name %>.</p>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Deadline</th>
		<th>Actions</th>
      </tr>
    </thead>
    <tbody>
        <%= render :partial => 'campaign', :collection => @campaigns %>
    </tbody>
  </table>
</div>
<%= link_to '<i class="glyphicon glyphicon-plus"></i> Add New Campaign'.html_safe, new_admin_organization_campaign_url, :class => "btn btn-primary" %>
