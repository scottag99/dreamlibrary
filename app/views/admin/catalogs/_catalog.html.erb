<tr>
  <td><%= link_to catalog.name, [:admin, catalog] %></td>
  <td><input type=checkbox disabled <%= catalog.active? ? 'checked' : '' %> /></td>
  <td><%= catalog.source %></td>
  <td><%= catalog.catalog_entries.count %></td>
  <td>
    <%= link_to "Edit", edit_admin_catalog_url(catalog), class: "btn btn-warning btn-xs" %>
    <%= link_to "Export Catalog", export_admin_catalog_url(catalog), class: "btn btn-success btn-xs" %>
    <%= link_to "Delete", admin_catalog_url(catalog),  method: :delete, class: "btn btn-danger btn-xs", data: {confirm: 'This action cannot be undone. Are you sure?'} %>
  </td>
</tr>
