<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading"><h3 class="panel-title">User Management</h3></div>
  <div class="panel-body">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd>Name from Auth0 service</dd>
      <dt>Email</dt>
      <dd>Email Address from Auth0 service</dd>
      <dt>Is Admin</dt>
      <dd>When checked, this user has access to the Admin portions of the application.</dd>
    </dl>
  </div>
  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Email Verifed?</th>
        <th>Is Admin</th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
  <%= render :partial => 'user', :collection => @users %>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="5">
          <nav aria-label="Page navigation example">
            <ul class="pagination">
              <li class="page-item">
                <a class="page-link" href="?per_page=<%= @pagination[:per_page] %>&page=1" aria-label="First">
                  <span aria-hidden="true">&laquo;</span>
                  <span class="sr-only">First</span>
                </a>
              </li>
               <li class="page-item<%= @pagination[:page] == 1 ? ' disabled' : '' %>">
                <a class="page-link" href="?per_page=<%= @pagination[:per_page] %>&page=<%= @pagination[:page]-1 %>" aria-label="Previous">
                  <span aria-hidden="true">&lt;</span>
                  <span class="sr-only">Previous</span>
                </a>
              </li>
              <li class="page-item active"><span class="page-link"><%= @pagination[:page] %></span></li>
              <li class="page-item<%= @is_last_page ? ' disabled' : '' %>">
                <a class="page-link" href="?per_page=<%= @pagination[:per_page] %>&page=<%= @pagination[:page]+1 %>" aria-label="Next">
                  <span aria-hidden="true">&gt;</span>
                  <span class="sr-only">Next</span>
                </a>
              </li>
            </ul>
          </nav>
        </td>
      </tr>
    </tfoot>
  </table>
</div>
