<%= form_for [:admin, @campaign.organization, @campaign, @campaign_survey_config], html: {class: 'form-horizontal'}, remote: true do |f| %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <div class="form-group">
    <%= f.label :teacher, class: "col-md-2 control-label" %>
    <div class="col-md-10">
      <%= f.collection_select :teacher, @teachers, :teacher, :teacher, :prompt => true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :survey_id, class: "col-md-2 control-label" %>
    <div class="col-md-10">
      <%= f.collection_select :survey_id, @surveys, :id, :name, :prompt => true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <div class="checkbox">
        <label>
          <%= f.check_box :is_disabled %>
          Is Disabled
        </label>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <div class="checkbox">
        <label>
          <%= f.check_box :is_control_group %>
          Is Control Group
        </label>
      </div>
    </div>
  </div>
<% end %>
