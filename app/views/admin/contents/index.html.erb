<div class="panel panel-default outer-panel panel-info">
  <!-- Default panel contents -->
  <div class="panel-heading"><h3 class="panel-title">Content Management</h3></div>
  <div class="panel-body">
    <p>The following contents are displayed on various public facing pages. Changes are immediate.</p>
  </div>
  <div class="panel panel-default outer-panel">
    <!-- Default panel contents -->
    <div class="panel-heading"><h3 class="panel-title">Contents</h3></div>
      <table class="table table-striped table-condensed">
        <caption><%= link_to '<i class="glyphicon glyphicon-plus"></i> New Content'.html_safe, new_admin_content_url, :class => "btn btn-xs btn-primary" %></caption>
        <thead>
          <tr>
            <th>Name</th>
            <th>Action Name</th>
            <th>Content</th>
            <th>&nbsp;</th>
          </tr>
        </thead>
        <tbody>
      <%= render :partial => 'content', :collection => @contents %>
        </tbody>
      </table>
    </div>
</div>
