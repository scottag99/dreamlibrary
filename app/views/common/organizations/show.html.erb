<div class="panel panel-default outer-panel panel-info">
  <!-- Default panel contents -->
  <div class="panel-heading"><h3 class="panel-title">Organization Detail</h3></div>
  <div class="panel-body">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @organization.name %></dd>
      <dt>External Wish List Search Page Link</dt>
      <dd><%= search_url(@organization.slug) %></dd>
    </dl>
  </div>
  <div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading"><h3 class="panel-title">Campaigns</h3></div>
    <table class="table table-striped table-condensed">
      <% if user_is_admin? %>
      <caption><%= link_to '<i class="glyphicon glyphicon-plus"></i> New Campaign'.html_safe, new_admin_organization_campaign_url(@organization), :class => "btn btn-xs btn-primary" %></caption>
      <% end %>
      <thead>
        <tr>
          <th>Name</th>
          <th>Deadline</th>
          <% if user_is_admin? %>
          <th>Ready for Donations</th>
          <th>Can Edit Wish Lists</th>
          <% end %>
          <th>Use Packs?</th>
          <th>Wishlists</th>
          <th>Book Limit</th>
          <% if user_is_admin? %>
          <th>Wishlist Total</th>
          <th>Donation Total</th>
          <% end %>
          <th>&nbsp;</th>
        </tr>
      </thead>
      <tbody>
    <%= render :partial => 'common/organizations/campaign', :collection => @organization.campaigns %>
      </tbody>
    </table>
  </div>

  <div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading"><h3 class="panel-title">Volunteers</h3></div>
    <table class="table table-striped table-condensed">
      <% if user_is_admin? %>
      <caption><%= link_to '<i class="glyphicon glyphicon-plus"></i> New Volunteer'.html_safe, new_admin_organization_partner_url(@organization), :class => "btn btn-xs btn-primary" %></caption>
      <% end %>
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Coordinator</th>
          <th>Active</th>
          <th>&nbsp;</th>
        </tr>
      </thead>
      <tbody>
    <%= render :partial => 'common/organizations/partner', :collection => @organization.partners %>
      </tbody>
    </table>
  </div>
</div>
