<%= form_for [get_namespace, @organization], :html => {:class => "form-horizontal"} do |f| %>

  <div class="form-group">
    <%= f.label :name, class: "col-md-1 control-label" %>
    <div class="col-md-4">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :slug, class: "col-md-1 control-label" %>
    <div class="col-md-4">
      <%= f.text_field :slug, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-1 col-md-4">
      <%= f.submit "Submit", class: "btn btn-default btn-primary" %>
      <%= link_to 'Back', url_for([get_namespace, @organization]), :class => "btn btn-default"%>
    </div>
  </div>

<% end %>
