<div class="container">
<%= form_for :wishlist, url: url_for([:update_multiple, get_namespace, @campaign.organization, @campaign, :wishlists, :wishlists_ids => params[:wishlists_ids]]), :method => :put, :html => {:class => "form-horizontal"} do |f| %>
<div class="form-group row">
  <%= f.label :teacher, class: "col-md-1 control-label" %>
  <div class="col-md-4">
    <%= f.text_field :teacher, class: "form-control" %>
  </div>
</div>
<div class="form-group row">
  <%= f.label :reader_age, class: "col-md-1 control-label" %>
  <div class="col-md-4">
    <%= f.number_field :reader_age, class: "form-control", :min => 0, :max => 99, :step => 1 %>
  </div>
</div>

<div class="form-group row">
  <%= f.label :reader_gender, class: "col-md-1 control-label" %>
  <div class="col-md-4">
    <label class="radio-inline">
      <%= f.radio_button :reader_gender, 'M' %> Male
    </label>
    <label class="radio-inline">
      <%= f.radio_button :reader_gender, 'F' %> Female
    </label>
  </div>
</div>
<% end %>
</div>
