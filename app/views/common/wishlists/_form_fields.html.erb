<div class="form-group row">
  <%= f.label :teacher, class: "col-md-1 control-label" %>
  <div class="col-md-4">
    <%= f.text_field :teacher, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :reader_name, class: "col-md-1 control-label" %>
  <div class="col-md-4">
    <%= f.text_field :reader_name, class: "form-control" %>
  </div>
</div>

<div class="form-group row">
  <%= f.label :reader_age, class: "col-md-1 control-label" %>
  <div class="col-md-4">
    <%= f.number_field :reader_age, class: "form-control", :min => 1, :max => 99, :step => 1 %>
  </div>
</div>

<div class="form-group row">
  <%= f.label :reader_gender, class: "col-md-1 control-label" %>
  <div class="col-md-4">
    <label class="radio-inline">
      <%= f.radio_button :reader_gender, 'M' %> Male
    </label>
    <label class="radio-inline">
      <%= f.radio_button :reader_gender, 'F' %> Female
    </label>
  </div>
</div>

<div class="form-group">
  <div class="col-md-offset-1 col-md-4">
    <%= f.submit "Submit", class: "btn btn-default btn-primary" %>
    <%= link_to 'Back', back_url, :class => "btn btn-default"%>
  </div>
</div>
