<div class="col-sm-12 col-md-2">
  <div class="pull-left">
    <h3><%= wishlist.public_name %>, <small><%= wishlist.reader_age %></small></h3>
    <h4 class="text-muted"><%= wishlist.campaign.organization.name %></h5>
    <h5 class="text-muted"><%= wishlist.teacher %></h4>
    <ul class="list-group">
      <%= render partial: 'wishlist_entry', collection: wishlist.wishlist_entries %>
    </ul>
    <p><%= link_to 'Donate', donate_url({:wishlist_id => wishlist.id, :amount => 30.00, :campaign_name => wishlist.campaign.name, :schoolname => wishlist.campaign.organization.name}), :class => 'btn btn-primary' if wishlist.wishlist_total > wishlist.donation_total %></p>
  </div>
</div>
